<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Ultimate Fox News Scraper</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li><a href="/saved">Saved Articles</a></li>
      <li><a href="/scrape" class="btn btn-default scrape-new">Get all of dat juicy news</a></li>
    </ul>
  </div>
</nav>
<div class="jumbotron text-center">
  <div class="overlay">
  <div class="caption">
    <h1>Ultimate Fox News Scraper</h1>
  </div>
</div>
<div class="container article-container">
  {{#each article}}
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading" id="panelHead">
        <h2 class="panel-title">{{this.title}}</h2>
      </div>
      <div class="panel-body">
        <a href="{{this.link}}"></a>
        <form class="navbar-form navbar-right" method="POST" action="/saved/{{this.id}}?_method=PUT">
          <button type="submit" class="btn btn-default" id="articleButton">Save Article</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
